{% extends "base.html.jinja" %}
{% block title %}
Pobieranie opinii o produkcie
{% endblock title %}
{% block content %}
 <div class="container mt-3">
      <div class="container mt-5" class="form-inline">
        <form method="POST" action="{{url_for('extract')}}">
            <div class="form-group">
                <label for="product_code" class="h6" name="product_code">Podaj ID produktu: </label>
                <input name="product_code" required id="product_code" type="text" class="form-control" aria-label="large" aria-describedby="inputGroup-sizing-sm" aria-describedby="emailHelp" required placeholder="Podaj ID" pattern="[\d]{8}">
            </div>
            <button type="submit" class="btn btn-primary">Wy≈õlij</button>
        </form>
    </div>
{% endblock content %}
            
        